    "tabBar": {
        "color": "#333",
        "selectedColor": "#ff0000",
        "list": [
            {
                "pagePath": "pages/index/index",
                "text": "主页",
                "iconPath": "/static/image/home.png",
                "selectedIconPath": "/static/image/homeCurrent.png"
            },
            {
                "pagePath": "pages/video/video",
                "text": "视频",
                "iconPath": "/static/image/video.png",
                "selectedIconPath": "/static/image/videoCurrent.png"
            },
            {
                "pagePath": "pages/personal/personal",
                "text": "个人中心",
                "iconPath": "/static/image/person.png",
                "selectedIconPath": "/static/image/personCurrent.png"
            }
        ]
    },
    "requiredBackgroundModes": [
        "audio"
    ]
