{
    "pages": [
        "pages/index/index",
        "pages/search/search",
        "pages/video/video",
        "pages/personal/personal",
        "pages/login/login"
    ],
    "subpackages": [
        {
            "root": "recommendPage",
            "name": "recommend",
            "pages": [
                "pages/everydayRecommend/everydayRecommend",
                "pages/songsPlay/songsPlay"
            ]
        }
    ],
    "preloadRule": {
        "pages/index/index": {
            "network": "all",
            "packages": ["recommend"]
        }
    },
    "style": "v2",
    "sitemapLocation": "sitemap.json",
    "window": {
        "navigationBarBackgroundColor": "#d23e32",
        "navigationBarTextStyle": "white",
        "navigationBarTitleText": "网易云音乐",
        "backgroundColor": "#eeeeee",
        "backgroundTextStyle": "light",
        "enablePullDownRefresh": false
