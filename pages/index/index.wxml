<!--pages/index/index.wxml-->
<view class="indexContainer">
    <!-- 轮播图 -->
    <swiper class="banners" indicator-dots autoplay circular indicator-active-color="#d23e32" indicator-color="#fff">
        <swiper-item wx:for="{{banners}}" wx:key="bannerId">
            <image src="{{item.pic}}"></image>
        </swiper-item>
    </swiper>

    <!-- 导航栏区域 -->
    <view class="navContainer">
        <view class="navItem" bindtap="toEverydayRecommend">
            <text class="iconfont icon-rili"></text>
            <text>每日推荐</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-gedan"></text>
            <text>歌单</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-daochu1024-02"></text>
            <text>排行榜</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-luyinjishouyinjidiantai"></text>
            <text>电台</text>
        </view>
        <view class="navItem">
            <text class="iconfont icon-zhibo"></text>
            <text>直播</text>
        </view>
    </view>

    <!-- 推荐歌曲 -->
    <view class="recommendContainer">
        <!-- 自定义组件 -->
        <NavHeader title="推荐歌曲" describe="为你精心推荐"></NavHeader>
        <!-- 滑块内容 -->
        <view class="recommendContent">
            <scroll-view class="scroll-box" scroll-x enable-flex>
                <view class="scroll-item" wx:for="{{recommends}}" wx:key="id">
                    <image src="{{item.picUrl}}"></image>
                    <text>{{item.name}}</text>
                </view>
            </scroll-view>
        </view>
    </view>

    <!-- 排行榜 -->
    <view class="ranking">
        <NavHeader title="排行榜" describe="热歌风向标"></NavHeader>
        <!-- 内容区域 -->
        <swiper class="ranking-swiper" circular next-margin="50rpx">
            <swiper-item class="ranking-item" wx:for="{{rankingData}}" wx:key="key">
                <text class="title">网易云{{item.name}} ></text>
                <view class="itemMusic" wx:for="{{item.tracks}}" wx:for-item="musicItems" wx:key="id">
                    <image src="{{musicItems.al.picUrl}}"></image>
                    <text class="flag">{{index}}</text>
                    <text class="musicName">{{musicItems.al.name}}</text>
                </view>
            </swiper-item>
        </swiper>
    </view>
</view>