/* pages/index/index.wxss */
/* 轮播区域 */
.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

/* 导航区域 */
.navContainer {
    display: flex;
}

.navItem {
    width: 20%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    line-height: 100rpx;
    background-color: red;
    text-align: center;
    color: white;
    font-size: 50rpx;
    margin: 20rpx 0;
}

.navItem text {
    font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer {
    padding: 20rpx 25rpx;
}

.recommendContent {
    margin-top: 10rpx;
}

.scroll-box {
    height: 300rpx;
    display: flex;
}

.scroll-item {
    margin-right: 10rpx;
}

.scroll-item image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scroll-item text {
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

/* 排行榜 */
.ranking {
    padding: 20rpx 25rpx;
}

.ranking-swiper {
    height: 350rpx;
}
.ranking-item .title {
    font-size: 26rpx;
    margin-bottom: 20rpx;
    display: block;
}

.itemMusic {
    padding: 10rpx 0;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.itemMusic image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
}

.itemMusic .flag {
    margin: 0 30rpx;
}

.itemMusic .musicName {
    display: block;
    max-width: 400rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}